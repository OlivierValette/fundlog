{% extends 'base.html.twig' %}

{% block title %}PortfolioLine index{% endblock %}

{% block body %}
    <h1>PortfolioLine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Qty</th>
                <th>Lvalue</th>
                <th>IoQty</th>
                <th>IoValue</th>
                <th>IoHide</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for portfolio_line in portfolio_lines %}
            <tr>
                <td>{{ portfolio_line.id }}</td>
                <td>{{ portfolio_line.qty }}</td>
                <td>{{ portfolio_line.lvalue }}</td>
                <td>{{ portfolio_line.ioQty }}</td>
                <td>{{ portfolio_line.ioValue }}</td>
                <td>{{ portfolio_line.ioHide ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('portfolio_line_show', {'id': portfolio_line.id}) }}">show</a>
                    <a href="{{ path('portfolio_line_edit', {'id': portfolio_line.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('portfolio_line_new') }}">Create new</a>
{% endblock %}
